/* 
  Application Styles
*/

.layout-enter-active, 
.layout-leave-active {
  transition: opacity .3s
}

.layout-enter, 
.layout-leave-active {
  opacity: 0
}

.page-enter-active, 
.page-leave-active {
  opacity: 1;
  -webkit-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
  transition: 0.5s;
}

.page-enter, 
.page-leave-active {
  opacity: 0;
  -webkit-transform: translate3d(0, -100%, 0);
  transform: translate3d(0, -100%, 0);
}

.body {
  color: #5d5d5d;
}

.pr-title
  margin-bottom: 10vh

.pf-index-card {
  height: 80vh;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.pf-img-hr {
  height: 125px;
  position: absolute;
  width: calc(100%);
  background-color: #6e012b;
  transform: translateY(-50%);
  top: 50%;
}

.pf-img-hr.pf-right {
  width: 40px;
  right: 8px;
}

.pf-portfolio {
  min-height: 100vh;
  padding: 70px 20px;
}

.pf-window-container 
  max-height: 600px;
  min-height: 600px;
  overflow-y: scroll;
  overflow-x: hidden;

.pf-window-container::-webkit-scrollbar {
  width: 5px;
  background-color: rgba(255, 255, 255, 1);
  height: 6px;
  padding: 10px 
  margin: 10px
  margin-left: 15px;
  color: #4a4a4a
}
.pf-window-container::-webkit-scrollbar-thumb {
  border-radius: 10px;
  -webkit-box-shadow: inset 0 0 1px rgba(0, 0, 0, .3);
  background-color: #dac957;
  margin-left: 5px
}

.pf-content-container
  min-height 90vh
  display flex
  justify-content center 
  align-items center

